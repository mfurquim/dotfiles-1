activeline() {
    activefg
}

line() {
    bg
}

even_section() {
    iif "[ $((step%2)) -eq 0 ]"
}

stepSetup() {
    separateStep
}

fg() {
    iif $(even_section) "525252" "a4a4a4"
}


activebg() {
    bg
}

bg() {
    iif $(even_section) "b9b9b9" "f7f7f7"
}

suffix() {
    border="%%{B#FFcecece}%%{O2}%%{B-}"
    iif $(even_section) "$border" ""
}

prefix() {
    border="%%{B#FFcecece}%%{O2}%%{B-}"
    iif $(even_section) "$border" ""
}
